<launch>
    <arg name="pkg_name" value="apriltags"/>
    <arg name="node_name" default="apriltags_preprocessing_tester_node"/>

    <arg name="veh" default="testbot" doc="Name of vehicle. ex: megaman"/>
    <arg name="param_file_name" default="test_default" doc="Specify a param file. ex:megaman."/>

    <!-- Run the node -->
    <include file="$(find apriltags)/launch/apriltags_preprocessing_node.launch">
        <arg name="veh" value="$(arg veh)"/>
        <arg name="param_file_name" value="$(arg param_file_name)"/>
    </include>

    <!-- Run unit test -->
    <remap from="apriltags_preprocessing_tester_node/global_switch" to="apriltags_preprocessing_node/global_switch" />
    <remap from="apriltags_preprocessing_tester_node/global_image_raw" to="apriltags_preprocessing_node/global_image_raw" />
    <test test-name="apriltags_preprocessing_tester_node" pkg="apriltags" type="apriltags_preprocessing_tester_node.py"
          ns="$(arg veh)"/>
</launch>
