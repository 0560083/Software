<launch>
    <arg name="pkg_name" value="apriltags"/>
    <arg name="node_name" default="apriltags_tester_node"/>

    <arg name="veh" default="testbot" doc="Name of vehicle. ex: megaman"/>
    <arg name="param_file_name" default="test_default" doc="Specify a param file. ex:megaman."/>
    <arg name="filename" default="$(find apriltags)/tests/20160408-226-intersection_apriltags_24_60-amadobot.png" />

    <!-- Run the node -->
    <include file="$(find apriltags)/launch/apriltags_node.launch">
        <arg name="veh" value="$(arg veh)"/>
        <arg name="param_file_name" value="$(arg param_file_name)"/>
    </include>

    <!-- Run unit test -->
    <remap from="apriltags_tester_node/image_raw" to="apriltags_global_node/image_raw" />
    <remap from="apriltags_tester_node/camera_info" to="apriltags_global_node/camera_info" />
    <remap from="apriltags_tester_node/apriltags" to="apriltags_global_node/apriltags" />
    <test test-name="apriltags_tester_node" pkg="apriltags" type="apriltags_tester_node.py" ns="$(arg veh)">
        <param name="filename" value="$(arg filename)" />
    </test>
</launch>
