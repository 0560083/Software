<launch>
	<arg name="veh"/>
	<arg name="bag_name"/>
	<arg name="local" default="false"/>
	<include file="$(find duckietown)/machines"/>
	<group ns="$(arg veh)">
		<node unless="$(arg local)" machine="$(arg veh)" name="bag_recorder" pkg="rosbag" type="record" args="-e /$(arg veh)/.* -O /mnt/logs/$(arg bag_name)_$(arg veh).bag"/>
		<node if="$(arg local)" pkg="rosbag" type="record" name="bag_recorder" args="-e /$(arg veh)/.* -O ~bags/$(arg bag_name)_$(arg veh).bag"/>
	</group>
</launch>